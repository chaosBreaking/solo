{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@components/*": [
                "components/*"
            ],
            "@framework/*": [
                "framework/*"
            ],
            "@src/*": [
                "src/*"
            ],
            "@static/*": [
                "src/static/*"
            ],
            "@utils/*": [
                "utils/*"
            ],
            "@tools/*": [
                "tools/*"
            ],
            "@widgets/*": [
                "widgets/*"
            ]
        },
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "preserve",
        "lib": [
            "dom",
            "es2017"
        ],
        "moduleResolution": "node",
        "noEmit": true,
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": false,
        "target": "esnext"
    },
    "exclude": [
        ".history",
        "output",
        "build",
        "tools",
        "logs",
        "mock"
    ]
}
